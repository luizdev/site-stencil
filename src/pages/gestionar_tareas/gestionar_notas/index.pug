  script(type='text/javascript').
    const modalManageNotes = document.querySelector('mm-sidesheet.size_50');
    if (modalManageNotes) {
      const observer = new MutationObserver((mutations, observer) => {        
        const textAreaTooltipHelp = document.querySelector('.observaciones mm-tooltip');
        if (textAreaTooltipHelp) {
          textAreaTooltipHelp.style.width = `230px`;
        }

        const radioTooltipHelp = document.querySelectorAll('mm-radiobutton mm-tooltip');
        if (radioTooltipHelp) {
          radioTooltipHelp.forEach((element, index) => {
            element.style.width = `50px`;
            element.style.left = `-15px`;
          });
        }

      });

        observer.observe(modalManageNotes, {
          subtree: true,
          attributes: true
        });
    }
    const openModal = document.querySelectorAll('.note');
    openModal.forEach((element, index) => {
      const iconModal = element.querySelector('.note__header');
      iconModal.addEventListener('click', clickHeader);
      function clickHeader() {
        const noteBody = element.querySelector('.note__body');
        const noteStatus = window.getComputedStyle(noteBody, null);
        const iconTurn = element.querySelector('i.note__header--open-icon');
        if (noteBody && noteStatus && iconTurn) {
          if (noteStatus.display == 'block') {
            noteBody.style.display = 'none';
          } else if (noteStatus.display == 'none'){
            noteBody.style.display = 'block';
          }
          if (iconTurn.classList.contains('fa-minus')) {
              iconTurn.classList.remove('fa-minus');
              iconTurn.classList.add('fa-plus');

          } else if (iconTurn.classList.contains('fa-plus')) {
              iconTurn.classList.remove('fa-plus');
              iconTurn.classList.add('fa-minus');
          }
        }
      }
    });
    

    