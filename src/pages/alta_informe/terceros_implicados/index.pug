                .b-block 
                  .row 
                    .col-12 
                      mm-listing#tableTercerosImplicadosAltaInforme.filter-table-header(search check-column show-table-actions actions-buttons)
                        table(slot='table')
                          thead
                            tr
                              each th, index in THEADER_ROW_TERCEROS_IMPLICADOS
                                if th.status
                                  th(class=`${th.status}`) 
                                    | #{th.name} 
                                else if th.actions
                                  th
                                    | #{th.name}
                                else if th.type == 'direccion'
                                  th.cell-direccion
                                    | #{th.name}
                                else
                                  th
                                    | #{th}      
                          tbody
                            each rows, indexRow in TBODY_ROWS_TERCEROS_IMPLICADOS
                              tr(id=`row_tercerosImplicados${indexRow}` class=`${rows[0].status}`)
                                each item, index in rows
                                  if item.text
                                    td
                                      span #{item.name}
                                      mm-tooltip #{item.text}
                                  else if item.status
                                    td
                                      span #{item.name}
                                  else if item.actions
                                    td
                                      .display-f.flex--justify-evenly.actionsButtons.text-align-r
                                        .action-pos-relative
                                          i.fas.fa-edit.text--brand_accent_500.pos-relative.fs-16.pointer.ml-s(onclick=`editRow(event, 'mm-listing#tableTercerosImplicadosAltaInforme', ${indexRow})` id=`editIcon_tercerosImplicados${indexRow}`)
