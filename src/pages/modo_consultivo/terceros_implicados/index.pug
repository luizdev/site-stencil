                  h3 Terceros implicados
                .b-block 
                  .row 
                    .col-12 
                      mm-listing.filter-table-header(compact)
                        table#icTercerosImplicados(slot='table')
                          thead
                            tr
                              each th, index in THEADER_ROW_TERCEROS_IMPLICADOS
                                if th.status
                                  th(class=`${th.status}`) 
                                    | #{th.name} 
                                else if th.type == 'direccion'
                                  th.cell-direccion
                                    | #{th.name}
                                else
                                  th
                                    | #{th}      
                          tbody
                            each rows, indexRow in TBODY_ROWS_TERCEROS_IMPLICADOS
                              tr(id=`garntiaRow_${indexRow}` class=`${rows[0].status}`)
                                each item, index in rows
                                  if item.text
                                    td
                                      span #{item.name}
                                      mm-tooltip #{item.text}
                                  else if item.status
                                    td
                                      span #{item.name}
                                  else
                                    td #{item}
                      
            .button-action-sticky.row.display-f.flex--justify-between.mt-m 
